<%= form_tag contributors_path do %>
  <%= text_field_tag :url, nil, placeholder: 'https://github.com/rails/rails' %>
  <%= submit_tag("Search") %>
<% end %>

<h3>Results:</h3>
<table>
  <% (0..2).each do |i| %>
    <tr>
      <td><%= @contributors[i]["login"] %></td>
      <td><%= link_to("download pdf", 
          contributor_path(format: :pdf, login: @contributors[i]["login"], 
          id: (i + 1))) %></td>
    </tr> 
  <% end %>
</table>